<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <!-- Sandbox Mode -->
  <key>com.apple.security.app-sandbox</key>
  <true/>

  <!-- Allow network connections (outgoing) -->
  <key>com.apple.security.network.client</key>
  <true/>

  <!-- Allow incoming network connections -->
  <key>com.apple.security.network.server</key>
  <true/>

  <!-- Access user-selected files (read/write) -->
  <key>com.apple.security.files.user-selected.read-write</key>
  <true/>

  <!-- Access Downloads folder -->
  <key>com.apple.security.files.downloads.read-write</key>
  <true/>

  <!-- Access Pictures folder -->
  <key>com.apple.security.files.photos-library</key>
  <true/>

  <!-- Allow printing -->
  <key>com.apple.security.print</key>
  <true/>

  <!-- Allow Apple Events (required for some inter-process communication) -->
  <key>com.apple.security.automation.apple-events</key>
  <true/>
</dict>
</plist>
