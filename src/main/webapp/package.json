{
  "name": "spring-nextjs-samples",
  "version": "1.0.0",
  "description": "Spring Boot and Next.js full-stack application",
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prepare": "husky",
    "prettier:format": "prettier --write */**/*.{js,jsx,json,yml,ts,html,tsx,scss,css,md}",
    "build": "npm run webapp:prod --",
    "webapp:dev": "npm run clean-www && next dev",
    "webapp:prod": "npm run clean-www && npm run webapp:build:prod",
    "webapp:build:prod": "next build",
    "clean-www": "rimraf build/*",
    "java:jar": "./mvnw -ntp verify -DskipTests --batch-mode",
    "java:jar:dev": "npm run java:jar -- -Plocal",
    "java:jar:prod": "npm run java:jar -- -Pprod",
    "backend:start": "./mvnw spring-boot:run -Plocal",
    "native-package": "./mvnw package -B -ntp -Pnative,prod -DskipTests",
    "native-start": "./target/native-executable",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "dependencies": {
    "@apollo/client": "^3.11.9",
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@reduxjs/toolkit": "^2.3.0",
    "axios": "^1.7.7",
    "bootstrap": "^5.3.3",
    "graphql": "^16.9.0",
    "graphql-ws": "^5.16.0",
    "i18next": "^23.16.4",
    "next": "15.0.1",
    "next-i18next": "^15.3.1",
    "next-language-detector": "^1.1.0",
    "react": "18.2.0",
    "react-bootstrap": "^2.10.5",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.53.1",
    "react-i18next": "^15.1.0",
    "react-redux": "^9.1.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/typescript": "^4.1.1",
    "@graphql-codegen/typescript-operations": "^4.3.1",
    "@graphql-codegen/typescript-react-apollo": "^4.3.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-bootstrap": "^0.32.37",
    "@types/react-dom": "^18.3.1",
    "@types/react-redux": "^7.1.34",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.14.0",
    "eslint-config-next": "^15.0.3",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "i18next-resources-for-ts": "^1.5.0",
    "lint-staged": "^15.2.10",
    "picocolors": "^1.1.1",
    "postcss": "^8",
    "rimraf": "^3.0.2",
    "sass": "1.77.6",
    "typescript": "^5"
  },
  "cacheDirectories": [
    "node_modules"
  ]
}
